@page "/listavacuna"
@inject IRepositorioVacuna RepositorioVacuna
@inject IJSRuntime js
@inject NavigationManager NavigationManager



<div class="row justify-content-center">
    <div class="col-8">
        <div class="alert alert-info text-center">
            <h1>Lista de Vacunas</h1>
        </div>
    </div>
</div>


<table class="table table-hover">
  <thead>
    <tr>
        <th>Vacunas Registrada</th> 
        <th>Personas Vacunadas</th>
    </tr>
  </thead>
  <tbody>
    @if(lsVacunax != null){
      @foreach (var item in lsVacunax)
      
      {
          <tr class="table-active"></tr>
      
          <tr>
            <td colspan="1" class="table-active">@item.marca</td> 
            <td colspan="1" class="table-active">@item.cantidad</td>
          </tr>
      }

    }
  </tbody>
</table>






@code{
    List<VacunaJoin> lsVacunax = null;
    protected override async Task OnInitializedAsync(){
        lsVacunax = await RepositorioVacuna.Consulta();
    }
}